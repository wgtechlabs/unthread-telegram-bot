{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "*.log",
    "coverage/**/*",
    ".git/**/*"
  ],
  "exec": "pnpm build && pnpm start",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "delay": 1000
}
